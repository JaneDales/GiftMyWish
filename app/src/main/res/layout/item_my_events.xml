<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp"
    android:elevation="4dp"
    android:background="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@color/gray_light"
            android:layout_margin="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/purple_dark"
            app:layout_constraintTop_toTopOf="@+id/ivCover"
            app:layout_constraintLeft_toLeftOf="@+id/ivCover"
            app:layout_constraintRight_toRightOf="@+id/ivCover"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="My Birthday"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="@+id/line"
            app:layout_constraintBottom_toBottomOf="@+id/line"
            app:layout_constraintLeft_toLeftOf="@+id/line"
            android:layout_marginLeft="16dp"
            />
        <ImageView
            android:id="@+id/btnDelete"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:padding="7dp"
            android:src="@drawable/ic_trash"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/line"
            app:layout_constraintTop_toTopOf="@+id/line"
            app:layout_constraintRight_toRightOf="@+id/line"
            />
        <ImageView
            android:id="@+id/btnEdit"
            android:layout_width="30dp"
            android:layout_height="0dp"
            android:padding="7dp"
            android:src="@drawable/ic_pencil"
            app:tint="@color/white"
            app:layout_constraintBottom_toBottomOf="@id/line"
            app:layout_constraintTop_toTopOf="@id/line"
            app:layout_constraintRight_toLeftOf="@id/btnDelete"
            />
        <TextView
            android:id="@+id/tvDaysLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="54 DAYS LEFT"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/purple_dark"
            android:layout_marginBottom="35dp"
            android:background="@drawable/bg_round_right"
            android:backgroundTint="@color/gray_light"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintLeft_toLeftOf="@id/ivCover"
            app:layout_constraintBottom_toBottomOf="@id/ivCover"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewGifts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/item_my_events_gift"
            tools:itemCount="3"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@id/ivCover"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:id="@+id/btnLike"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_btn_yeay_color"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewGifts"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:id="@+id/btnShare"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_share"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewGifts"
            app:layout_constraintLeft_toRightOf="@id/btnLike"
            />
        <ImageView
            android:id="@+id/btnComment"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/ic_group"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="16dp"
            app:layout_constraintTop_toBottomOf="@id/recyclerViewGifts"
            app:layout_constraintLeft_toRightOf="@id/btnShare"
            />
        <TextView
            android:id="@+id/tvLikesCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 Likes."
            android:textSize="10sp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@id/tvCommentsCount"
            app:layout_constraintRight_toLeftOf="@+id/tvCommentsCount"
            />
        <TextView
            android:id="@+id/tvCommentsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="4 Comments"
            android:textSize="10sp"
            app:layout_constraintTop_toTopOf="@id/btnLike"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/tvViewAllComments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View all comments..."
            android:textSize="12sp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnLike"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>