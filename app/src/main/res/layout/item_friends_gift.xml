<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:background="@color/gray_light"
            android:layout_margin="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TELEPHONE"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bg_round_right"
            android:backgroundTint="@color/purple_dark"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintLeft_toLeftOf="@id/ivCover"
            app:layout_constraintBottom_toBottomOf="@id/ivCover"
            />
        <TextView
            android:id="@+id/tvUserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/username"
            android:textSize="18sp"
            android:textColor="@color/purple_dark"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivCover"
            app:layout_constraintBottom_toTopOf="@id/tvPrice"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0/440$"
            android:textSize="18sp"
            android:textColor="@color/purple_dark"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvUserName"
            />
        <TextView
            android:id="@+id/tvFunded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="% Funded"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:paddingHorizontal="8dp"
            android:background="@drawable/bg_round_left"
            android:backgroundTint="@color/purple_dark"
            app:layout_constraintBottom_toBottomOf="@id/sbSeekBar"
            app:layout_constraintRight_toRightOf="parent"
            />
        <SeekBar
            android:id="@+id/sbSeekBar"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:progress="0"
            android:layout_marginVertical="12dp"
            android:progressDrawable="@drawable/bg_progress"
            app:layout_constraintTop_toBottomOf="@id/tvPrice"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/tvFunded"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_events"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@id/tvParticipants"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:id="@+id/btnContribute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contribute"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>