<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ui.my_events.details.MyEventsDetailsFragment">

    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="100dp"
        android:layout_height="95dp"
        android:background="@color/gray_light"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/username"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="@id/ivAvatar"
        app:layout_constraintLeft_toRightOf="@id/ivAvatar"
        app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
        />
    <TextView
        android:id="@+id/tvUserStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="@string/username"
        android:textSize="12sp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toTopOf="@id/tvUserName"
        app:layout_constraintLeft_toRightOf="@id/ivAvatar"
        app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
        />
    <ImageView
        android:id="@+id/btnShare"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:src="@drawable/ic_share"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        android:layout_margin="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tvWishList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="WISH LIST"
        android:textColor="@color/purple_dark"
        android:textSize="18sp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_left"
        android:drawableTint="@color/purple_dark"
        android:padding="8dp"
        app:layout_constraintTop_toBottomOf="@id/ivAvatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <View
        android:id="@+id/viewLine"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/purple_dark"
        app:layout_constraintTop_toBottomOf="@id/tvWishList"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/anniversary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/viewLine"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_round_events"
        android:layout_margin="8dp"
        >
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Expiry"
            android:textColor="@color/white"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="12dp"
            android:background="@drawable/bg_round_left"
            android:backgroundTint="@color/purple_dark"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="My Anniversary"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvDate"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            tools:text="Hi friends /n My birthday"
            android:textSize="16sp"
            android:maxLines="2"
            android:textColor="@color/black"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clRecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/anniversary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_round_events"
        android:layout_margin="8dp"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="1"
            tools:listitem="@layout/item_friends_gift"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
     />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        android:elevation="4dp"
        android:layout_margin="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Comments"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/tvLike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Like. "
                app:layout_constraintTop_toTopOf="@id/tvComments"
                app:layout_constraintRight_toLeftOf="@id/tvComments"
                />
            <ImageView
                android:id="@+id/btnLike"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_btn_yeay_black"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <ImageView
                android:id="@+id/btnShare2"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_share"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btnLike"
                />
            <ImageView
                android:id="@+id/btnComments"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_group"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_margin="8dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/btnShare2"
                />
            <TextView
                android:id="@+id/tvAllComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all comments..."
                android:textColor="@color/black"
                android:layout_marginLeft="8dp"
                android:layout_marginVertical="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnLike"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>