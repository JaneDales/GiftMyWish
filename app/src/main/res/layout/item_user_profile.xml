<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    android:elevation="4dp"
    android:layout_marginTop="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/bg_round_border_gift"
            android:layout_margin="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />
        <TextView
            android:id="@+id/tvDaysLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            tools:text="@string/days_left"
            android:textColor="@color/purple_dark"
            android:textAllCaps="true"
            android:paddingHorizontal="8dp"
            android:background="@drawable/bg_round_left"
            android:backgroundTint="@color/gray_light"
            app:layout_constraintTop_toTopOf="@id/ivCover"
            app:layout_constraintRight_toRightOf="@id/ivCover" />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="My Birthday"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_marginBottom="35dp"
            android:background="@drawable/bg_round_right"
            android:backgroundTint="@color/gray_light"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintLeft_toLeftOf="@id/ivCover"
            app:layout_constraintBottom_toBottomOf="@id/ivCover"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clUserProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ivCover"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            >
            <ImageView
                android:id="@+id/btnLike"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_btn_yeay_color"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                />
            <ImageView
                android:id="@+id/btnShare"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_share"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toTopOf="@id/btnLike"
                app:layout_constraintLeft_toRightOf="@id/btnLike"
                />
            <ImageView
                android:id="@+id/btnComment"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/ic_group"
                android:layout_marginLeft="16dp"
                app:layout_constraintTop_toTopOf="@id/btnLike"
                app:layout_constraintLeft_toRightOf="@id/btnShare"
                />
            <TextView
                android:id="@+id/tvLikesCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2 Likes."
                android:textSize="10sp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@id/tvCommentsCount"
                app:layout_constraintRight_toLeftOf="@+id/tvCommentsCount"
                />
            <TextView
                android:id="@+id/tvCommentsCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="4 Comments"
                android:textSize="10sp"
                app:layout_constraintTop_toTopOf="@id/btnLike"
                app:layout_constraintRight_toRightOf="parent"
                />
            <TextView
                android:id="@+id/tvViewAllComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View all comments..."
                android:textSize="12sp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="12dp"
                app:layout_constraintTop_toBottomOf="@id/btnLike"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
