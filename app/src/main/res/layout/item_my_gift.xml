<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        android:elevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/ivCover"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@color/gray_light"
            android:layout_margin="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="TELEPHONE"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_marginBottom="25dp"
            android:background="@drawable/bg_round_right"
            android:backgroundTint="@color/purple_dark"
            android:paddingVertical="2dp"
            android:paddingHorizontal="8dp"
            app:layout_constraintLeft_toLeftOf="@id/ivCover"
            app:layout_constraintBottom_toBottomOf="@id/ivCover"
            />
        <TextView
            android:id="@+id/tvFunded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_border"
            tools:text="0% Funded"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_dark"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivCover"
            />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_round_border_left"
            android:paddingHorizontal="8dp"
            android:text="$0/440$"
            android:textColor="@color/purple_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintRight_toLeftOf="@id/lineTop1"
            app:layout_constraintTop_toTopOf="@id/tvFunded"
            app:layout_constraintLeft_toRightOf="@id/lineTop2"/>

        <View
            android:id="@+id/lineTop2"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginRight="8dp"
            app:layout_constraintTop_toTopOf="@id/tvPrice"
            app:layout_constraintBottom_toBottomOf="@id/tvPrice"
            app:layout_constraintRight_toRightOf="@id/tvFunded"
            />

        <View
            android:id="@+id/lineTop1"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@id/tvExpired"
            app:layout_constraintBottom_toBottomOf="@id/tvExpired"
            app:layout_constraintLeft_toLeftOf="@id/tvExpired"
            />


        <TextView
            android:id="@+id/tvExpired"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="expired"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textAllCaps="true"
            android:textColor="@color/purple_dark"
            android:paddingHorizontal="8dp"
            android:background="@drawable/bg_round_left"
            android:backgroundTint="@color/gray"
            app:layout_constraintTop_toTopOf="@id/tvPrice"
            app:layout_constraintRight_toRightOf="parent"
            />
        <SeekBar
            android:id="@+id/sbSeekBar"
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:progress="50"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="12dp"
            android:progressDrawable="@drawable/bg_progress"
            app:layout_constraintTop_toBottomOf="@id/tvPrice"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/expired"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_round_events"
        android:layout_margin="8dp"
        app:layout_constraintBottom_toTopOf="@id/tvParticipants"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:id="@+id/btnStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Expired. No funds."
            android:textSize="22sp"
            android:gravity="center"
            android:padding="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>